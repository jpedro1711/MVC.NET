@model List<MovieMVC.Models.Movie>;
@{
    ViewData["Title"] = "Movies";
}
<h2>Listagem de filmes</h2>
<a href="/Movie/Register" class="btn btn-success my-2">Cadastrar Filme</a>
<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Título</th>
            <th scope="col">Director</th>
            <th scope="col">Gênero</th>
            <th scope="col">Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var movie in Model)
        {
            <tr>
                <td scope="row">@movie.Id</td>
                <td>@movie.Title</td>
                <td>@movie.Diretor</td>
                <td>@movie.Genre</td>
                <td>
                    <a asp-action="Details" asp-route-id="@movie.Id">Detalhes</a>
                    <a asp-action="Edit" asp-route-id="@movie.Id">Editar</a>
                    <a asp-action="ConfirmDelete" asp-route-id="@movie.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
